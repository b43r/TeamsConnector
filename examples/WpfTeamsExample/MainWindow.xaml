<Window x:Class="WpfTeamsExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTeamsExample"
        mc:Ignorable="d"
        Title="TeamsConnector Example" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>
        <Button x:Name="btnMakeCall" Content="Make call" HorizontalAlignment="Left" Margin="10,54,0,0" Padding="10" VerticalAlignment="Top" RenderTransformOrigin="1.713,6.076" Click="btnMakeCall_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Number to call:" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNumber" HorizontalAlignment="Center" Margin="0,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380"/>
        <StackPanel Margin="0,100,0,0">
            <RadioButton Content="Available" Margin="10,10,0,0" Click="rbAvailability_Click"></RadioButton>
            <RadioButton Content="Busy" Margin="10,10,0,0" Click="rbAvailability_Click"></RadioButton>
            <RadioButton Content="DoNotDisturb" Margin="10,10,0,0" Click="rbAvailability_Click"></RadioButton>
            <RadioButton Content="BeRightBack" Margin="10,10,0,0" Click="rbAvailability_Click"></RadioButton>
            <RadioButton Content="Away" Margin="10,10,0,0" Click="rbAvailability_Click"></RadioButton>
            <RadioButton Content="Offline" Margin="10,10,0,0" Click="rbAvailability_Click"></RadioButton>
        </StackPanel>
        <RichTextBox x:Name="txtLog" Grid.Column="1" IsReadOnly="true" VerticalScrollBarVisibility="Auto">
        </RichTextBox>
    </Grid>
</Window>
